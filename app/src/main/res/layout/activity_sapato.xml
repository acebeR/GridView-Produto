<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SapatoActivity">

    <ImageView
        android:id="@+id/imgSapato"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        />
    <TextView
        android:id="@+id/lbview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSapato"
        android:text="______________________________________"/>

    <TextView
        android:id="@+id/lbNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_below="@+id/lbview1"


        />

    <TextView
        android:id="@+id/lbview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbNome"/>

    <TextView
        android:id="@+id/lbDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbview2"
        android:textSize="20sp"



        />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="@string/btnVoltar" />

</RelativeLayout>